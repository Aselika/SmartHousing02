@page
@model WebApp.Pages.Schedules.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Schedule.ScheduleId" />
            <div class="form-group">
                <label asp-for="Schedule.ZoneId" class="control-label"></label>
                <select asp-for="Schedule.ZoneId" class="form-control" asp-items="ViewBag.ZoneId"></select>
                <span asp-validation-for="Schedule.ZoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Schedule.DaysOfWeek" class="control-label"></label>
                <input asp-for="Schedule.DaysOfWeek" class="form-control" />
                <span asp-validation-for="Schedule.DaysOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Schedule.StartTime" class="control-label"></label>
                <input asp-for="Schedule.StartTime" class="form-control" />
                <span asp-validation-for="Schedule.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Schedule.EndTime" class="control-label"></label>
                <input asp-for="Schedule.EndTime" class="form-control" />
                <span asp-validation-for="Schedule.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Schedule.IsEnabled" /> @Html.DisplayNameFor(model => model.Schedule.IsEnabled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
